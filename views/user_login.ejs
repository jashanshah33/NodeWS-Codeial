<link rel="stylesheet" href="<%=assetPath('css/login_signup.css')%>" />

<div class="outer_header_form_container">
  <form action="/users/create_session" method="post">
    <div>
      <label for="login_email">Email</label>
      <input id="login_email" name="email" type="email" required />
    </div>
    <div>
      <label for="login_password">Password</label>
      <input id="login_password" name="password" type="password" required />
    </div>

    <div>
      <button id="login_btn" type="submit">Login</button>
    </div>
    <div id="google_btn">
      <a href="/users/auth/google">
        <button type="button">Google login</button>
      </a>
    </div>

    <div id="forget_password">
      <a href="/users/forgetPassword"> Forgot Password </a>
    </div>
  </form>
</div>
